<% provide(:title, 'Signup') %>
<div class="signup-form">
  <h2>Signup</h2>
  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => 'form-horizontal' }) do |f| %>
    <%= devise_error_messages! %>

    <div>
      <%= f.email_field :email, :autofocus => true, :placeholder => "Email Adress", :class => "form-control" %>
    </div>

    <div>
      <%= f.text_field :name, :placeholder => "Username", :class => "form-control" %>
    </div>

    <div>
      <%= f.password_field :password, :placeholder => "Password", :class => "form-control" %></div>

    <div>
      <%= f.password_field :password_confirmation, :placeholder => "Password confirmation", :class => "form-control" %></div>

  <div><%= f.submit "Sign up", :class => 'btn btn-primary' %></div>
  <% end %>
<%= render "devise/shared/links" %>
</div>
