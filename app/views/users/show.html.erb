<% provide(:title, @user.name) %>
<h1>
  <%= gravatar_for @user %>
  <%= @user.name %>
</h1>

<% practices = Practice.where(user_id: @user.id).limit(10).order(:created_at).reverse_order %>
<% if practices.count > 0 %>

Avarage typing speed over the last 10 lessons: <%= average_wpm_for(@user) %>

<table class="table table-hover table-condensed">
	<thead>
		<tr>
			<th>Lesson</th>
			<th>WPM</th>
			<th>CPM</th>
		</tr>
	</thead>
	<tbody>
			<% practices.each do |e| %>
				<tr>
					<td><%= Lesson.find(e.lesson_id).desc %></td>
					<td><%= e.wpm %></td>
					<td><%= e.cpm %></td>
				</tr>

			<% end %>
	</tbody>
</table>

<% else %>
	<%= link_to "Start to learn touch-typing", '/learn', class: "btn btn-large btn-primary" %>
<% end %>
